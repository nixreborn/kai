# FastAPI Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# LLM Configuration
LLM_BASE_URL=http://192.168.1.7:8000/v1
LLM_API_KEY=optional-api-key
LLM_MODEL=default

# LLM Connection Settings
LLM_TIMEOUT=30.0
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0

# Circuit Breaker Settings
LLM_CIRCUIT_BREAKER_THRESHOLD=5
LLM_CIRCUIT_BREAKER_TIMEOUT=60.0

# Database Configuration
DATABASE_URL=postgresql+asyncpg://kai:kai@localhost:5432/kai_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security - CRITICAL: Generate new secrets using scripts/generate_secrets.py
# Never use these example values in production!
SECRET_KEY=CHANGE_ME_generate_with_generate_secrets_py
DATABASE_ENCRYPTION_KEY=CHANGE_ME_generate_with_generate_secrets_py
SESSION_SECRET=CHANGE_ME_generate_with_generate_secrets_py
CSRF_SECRET=CHANGE_ME_generate_with_generate_secrets_py
API_KEY_SALT=CHANGE_ME_generate_with_generate_secrets_py

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_ENABLED=true
REDIS_URL=redis://localhost:6379
RATE_LIMIT_STORAGE=memory://

# Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
CSP_ENABLED=true
ENVIRONMENT=development

# SSL/TLS (Production only)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/kai.crt
SSL_KEY_PATH=/etc/ssl/private/kai.key

# Agent Configuration
# Recommended models:
# - Kai Agent: Use your most capable conversational model (e.g., llama-3.1-70b, qwen-2.5-72b)
# - Guardrail Agent: Fast, reliable model for safety checks (e.g., llama-3.1-8b, qwen-2.5-14b)
# - Genetic Agent: Pattern recognition model (e.g., llama-3.1-70b, qwen-2.5-32b)
# - Wellness Agent: Clinical/analytical model (e.g., llama-3.1-70b, qwen-2.5-72b)
KAI_AGENT_MODEL=default
GUARDRAIL_AGENT_MODEL=default
GENETIC_AGENT_MODEL=default
WELLNESS_AGENT_MODEL=default
